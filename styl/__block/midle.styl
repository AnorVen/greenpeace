.midle {
  width: 100%;
  height: 100vh;
  background-image url("../img/midle.png");
  background-size: 100% 100%;
  background-repeat: no-repeat;
  background-position: top right;
  box-sizing border-box;
  position: relative;
  @media desktop-width {
    background-size: cover;
  }
  &__title {
    max-width 320px;
    position: absolute;
    top: 130px;
    left: 140px;
  }


}

.p-wrapper {
  width: 100%;
  height: 100%;
  position: relative
  background-color: rgba(255,255,255,0)

}

.p-wrapper .layer--overlay {
  background: inherit;
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
}

.p-wrapper .layer--movable {
  width: 15vh;
  height: 15vh;
  background: black;
  border-radius: 100%;
  position: absolute;
  z-index: 20;
}

.preview {
  width: 100%;
  height: 100%;
  position: relative;
  mix-blend-mode: multiply;
}

.preview__video {
  width: 100%;
  height: 100%;
}

.preview__inner {
  width: 100%;
  height: 100%;
  background: white;
  mix-blend-mode: screen;
  position: absolute;
  top: 0;
  left: 0;
}

.preview .player {
  width: 60vh;
  height: 60vh;
  position: absolute;
  right: 0;
  margin: 0 auto;
  top: 50%;
  -webkit-transform: translateY(-50%);
  transform: translateY(-50%);
  left: 0;
  z-index: 10;
}

.preview .item {
  left: 0;
  background: black;
  -webkit-animation: color 10s infinite;
  animation: color 10s infinite;
  border-radius: 100%;
  height: 100%;
  width: 100%;
}

.preview .item__play {
  display: block;
  background: white;
  width: 25vh;
  height: 25vh;
  border-radius: 100%;
  position: relative;
  top: 50%;
  -webkit-transform: translateY(-50%);
  transform: translateY(-50%);
  left: 0;
  right: 0;
  margin: 0 auto;
  bottom: -10px;
  -webkit-animation: pulse 2s infinite;
  animation: pulse 2s infinite;
}

.preview .item__play:before {
  content: "";
  position: absolute;
  left: 0;
  width: 0;
  height: 0;
  top: 50%;
  right: -5px;
  margin: 0 auto;
  -webkit-transform: translateY(-50%);
  transform: translateY(-50%);
  border-top: 5vh solid transparent;
  border-bottom: 5vh solid transparent;
  border-left: 8vh solid black;
}

@-webkit-keyframes color {
  20% {
    background: #3E827E;
  }
  50% {
    background: #05394F;
  }
  70% {
    background: #67565C;
  }
}

@keyframes color {
  20% {
    background: #3E827E;
  }
  50% {
    background: #05394F;
  }
  70% {
    background: #67565C;
  }
}

@-webkit-keyframes pulse {
  0% {
    box-shadow: 0 0 0 0 rgba(255, 255, 255, 0.8);
  }
  70% {
    box-shadow: 0 0 0 6vh rgba(255, 255, 255, 0);
  }
  100% {
    box-shadow: 0 0 0 0 rgba(255, 255, 255, 0);
  }
}

@keyframes pulse {
  0% {
    box-shadow: 0 0 0 0 rgba(255, 255, 255, 0.8);
  }
  70% {
    box-shadow: 0 0 0 6vh rgba(255, 255, 255, 0);
  }
  100% {
    box-shadow: 0 0 0 0 rgba(255, 255, 255, 0);
  }
}


